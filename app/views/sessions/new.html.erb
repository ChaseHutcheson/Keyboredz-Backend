<h2>Login</h2>

<%= form_with(url: login_path, local: true) do |form| %>
 <div>
    <%= form.label :email %>
    <%= form.email_field :email, autofocus: true, autocomplete: "email" %>
 </div>

 <div>
    <%= form.label :password %>
    <%= form.password_field :password, autocomplete: "current-password" %>
 </div>

 <div>
    <%= form.submit "Log in" %>
 </div>
<% end %>
